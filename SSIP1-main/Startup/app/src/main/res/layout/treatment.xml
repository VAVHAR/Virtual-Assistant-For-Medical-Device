<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/treatment"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/efwwe"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Doctor Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/name"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:fontFamily="sans-serif-light"
        android:src="@drawable/mapslocation"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:foregroundGravity="right"
        android:layout_alignEnd="@id/name"
        android:layout_alignRight="@id/name"
        android:layout_centerHorizontal="true"
        android:id="@+id/doctorlocation"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hospital Address"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/name"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/address"
        />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact No:-"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/address"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/cont"
        />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border"
        android:layout_marginTop="8dp"
        android:id="@+id/border"
        android:layout_below="@id/efwwe"
        android:layout_marginBottom="8dp"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border"
        >

<!--    medical-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Medicine"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/medical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"


        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/mapslocation"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:id="@+id/medicallocation"
        android:layout_alignEnd="@id/medical"
        android:layout_alignRight="@id/medical"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine Name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/medical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/medicinename"
        />

    </RelativeLayout>
</RelativeLayout>